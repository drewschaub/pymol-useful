# ~/.pymolrc — publication defaults

# 1) Base settings
bg white
set orthoscopic, 1
set ray_opaque_background, 0
set ray_trace_fog, 0
hide everything

# 2) Lighting & shadows
set antialias, 2  # 2×2 sampling
set ray_shadows, 0
set ray_trace_mode, 1
set specular, 0.5
set specular_power, 100
set ambient, 0.333
set direct, 0.8
set reflect, 0.1

# 3) Cartoon styles
show cartoon
set cartoon_fancy_helices, 1
set cartoon_smooth_loops, 0
set cartoon_sampling, 10
set cartoon_tube_radius, 0.3
set cartoon_tube_quality, 15
set cartoon_side_chain_helper, 1

# 4) Stick & sphere styles
set stick_radius, 0.15, hetatm
set stick_quality, 20, hetatm
show sticks, hetatm
color cyan, solvent
set sphere_scale, 0.125
hide everything, solvent

# 5) Ribbon styles
set ribbon_radius, .2
set ribbon_width, 2
set ribbon_sampling, 1

# 6) Surface styles
set surface_quality, 1
set transparency, 0.85

# 7) custom and favorite colors
color white, ss l+

### define custom colors ###
set_color pubBlue,   [0.0,  0.45, 0.70]   # deep-ish blue
set_color pubOrange, [0.90, 0.60, 0.00]   # muted orange
set_color pubTeal,   [0.20, 0.60, 0.60]   # medium teal
set_color pubCoral,  [0.90, 0.40, 0.40]   # soft coral

### apply Blue & Orange ###
color pubBlue,   ss h   # helices
color pubOrange, ss s   # sheets

### OR apply Teal & Coral ###
# color pubTeal,   ss h
# color pubCoral,  ss s
